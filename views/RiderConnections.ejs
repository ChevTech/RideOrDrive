<% include chunks/header %>
<% include chunks/nav %>

<div>
    
    <div>
        
        <h3 class = "text"><a id="getRiderConnections" href="/getConnectionsPage">Rider Connections</a></h3>
        
        <% if (rider_posts.length === 0){%>
            <p>Oops! You have not made any rider connections yet!</p>
        <% } else { %>
            <% rider_posts.forEach(function(post){ %>
                <form method="post" action="/message">
                        
                    <input name = "post_option" type="hidden" value="<%=post.option%>">
                    <input name = "post_id" type="hidden" value="<%=post.id%>">
                    
                    <div>
                        <p>Posted by: <%=post.username%></p>
                        <p>From: <%=post.fromStreet%>, <%=post.fromCity%>, <%=post.fromState%></p>
                        <p>To: <%=post.toStreet%>, <%=post.toCity%>, <%=post.toState%></p>
                        <p>Departure: <%=post.month%>-<%=post.day%>-<%=post.year%>  at  <%=post.hour%>:<%=post.minute%> <%=post.meridian%></p>
                        <p><%=post.responderUsername%>: <%=post.responseMessage%></p>
                        <button class="button" type="submit">Message</button>
                    </div>
                </form>
            <% })%>
        <% } %>
        
        <br>
        <br>
        
        <h3 class = "text"><a id="getDriverConnections" href="/getDriverConnections">Driver Connections</a></h3>
    </div>
    

</div>

<% include chunks/footer %>