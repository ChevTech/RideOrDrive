<%include chunks/header %>

        <div id = "websiteBio">
            <h3 class = "title" id = "slogan">The Ultimate Travel Hub Has Arrived.</h3> <h4 class = "text"> Coordinate car pools, plan road trips, and save money in the process.
            With RideOrDrive, getting from point A to point B has never been easier.</h4>
        </div>
        
        <form id="login" method="post" action="/login">
            <fieldset>
                <legend>Login</legend>
                <% if (error) { %>
                    <p class = "text" id="error"><%= error %></p>
                <% } %>
                <label for="username">Username: </label>
                <input class = "form" id = "username" type = "text" name = "username">
                <label for="password">Password: </label>
                <input class = "form" id = "password" type = "password" name = "password">
                <input class = "button" id = "login_submit" type="submit">
                <a class = "text" href ="/changePassword">Change Password</a>
            </fieldset>
        </form>
        
       <form id = "registerForm" method="get" action="/getRegisterForm">
            <h1 class = "text">Don't have an account?</h1>
            <button class = "button" id = "getRegisterForm" type="submit"> Sign Up!</button>
       </form>
       

